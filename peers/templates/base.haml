-#
-# Base HAML file which all other pages should inherit from
-#

- load static

%head
  %title
    - block title
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no"}
  %meta{name: "author", content: "derteufelqwe"}
  <!-- Favicon -->
  %link{rel: "icon", type: "image/ico", href: "{% static 'img/favicon.ico' %}"}
  <!-- Font Awesome icons (free version)-->
  %script{src: "https://use.fontawesome.com/releases/v5.13.0/js/all.js", crossorigin: "anonymous"}
  <!-- Google fonts-->
  %link{href: "https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700", rel: "stylesheet", type: "text/css"}
  %link{href: "https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i", rel: "stylesheet", type: "text/css"}
  -#%link{rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"}
  %link{rel: "stylesheet", href: "{% static 'css/bootstrap-4.5.min.css' %}"}
  %link{rel: "stylesheet", href: "{% static 'css/template-style.css' %}"}
  %link{rel: "stylesheet", href: "{% static 'css/style.css' %}"}
  - block stylesheets


%body#page-top
  <!-- Navigation-->
  - if id_active
    %div#userIdDiv.float-md-right.border.rounded{class: "{% if not user_id %}invisible{% endif %}"}
      - if agent_connected
        %img#userIdImg.float-md-right.mt-3.mr-4{src: "{% static 'img/connectedIcon.png' %}", title: "Agent connected", width: "25px", height: "25px"}
      - else
        %img#userIdImg.float-md-right.mt-3.mr-4{src: "{% static 'img/NotConnectedIcon.png' %}", title: "Agent not connected", width: "25px", height: "25px"}
      %span#userIdSpan.float-md-right.m-3.text-lg-right{title: "Your current ID"} {{ user_id }}

  %nav#sideNav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
    %a.navbar-brand.js-scroll-trigger{href: "{% url 'index' %}"}
      %span.d-none.d-lg-block
        %img.img-fluid.img-profile.rounded-circle.mx-auto.mb-2{alt: "", src: "{% static 'img/dotalogo.png' %}"}

    %button.navbar-toggler{"aria-controls": "navbarSupportedContent", "aria-expanded": "false", "aria-label": "Toggle navigation", "data-target": "#navbarSupportedContent", "data-toggle": "collapse", type: "button"}
      %span.navbar-toggler-icon

    %div#navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav
        %li.nav-item
          %a.nav-link.js-scroll-trigger{href: "{% url 'index' %}"} Dota Peers
        %li.nav-item
          %a.nav-link.js-scroll-trigger{href: "{% url 'information' %}"} Information
        %li.nav-item
          %a.nav-link.js-scroll-trigger{href: "{% url 'getId' %}"} Start Generation
        %li.nav-item
          %a.nav-link.js-scroll-trigger{href: "{% url 'about' %}"} About

  %div.container-fluid.p-0
    %section#about.resume-section
      %div.resume-section-content
        - block content


  -#%script{src: "https://code.jquery.com/jquery-3.5.1.min.js"}
  %script{src: "{% static 'js/jquery-3.5.1.min.js' %}"}
  %script{src: "https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js"}
  %script{src: "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"}
  %script{src: "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"}
  - block scripts
